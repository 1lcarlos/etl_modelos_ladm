# .env.example
# Copie este archivo a .env y configure sus valores
# copy .env.example .env

# =============================================================================
# CONFIGURACION DE BASE DE DATOS ORIGEN
# =============================================================================
DB_ORIGEN_HOST=localhost
DB_ORIGEN_DATABASE=interno_acc
DB_ORIGEN_USER=postgres
DB_ORIGEN_PASSWORD=su_password_aqui
DB_ORIGEN_PORT=5433

# =============================================================================
# CONFIGURACION DE BASE DE DATOS DESTINO
# =============================================================================
DB_DESTINO_HOST=localhost
DB_DESTINO_DATABASE=interno_v3_acc
DB_DESTINO_USER=postgres
DB_DESTINO_PASSWORD=su_password_aqui
DB_DESTINO_PORT=5433

# =============================================================================
# ESQUEMAS A PROCESAR
# =============================================================================
# Separados por coma, sin espacios
SCHEMAS=cun25489

# =============================================================================
# CONFIGURACION DE RENDIMIENTO
# =============================================================================
BATCH_SIZE=1000
CONNECTION_POOL_SIZE=5
MAX_RETRIES=3
TIMEOUT=300

# =============================================================================
# CONFIGURACION DE TRUNCATE
# =============================================================================
# true/false para habilitar/deshabilitar
TRUNCATE_ENABLED=true
TRUNCATE_REQUIRE_CONFIRMATION=true
TRUNCATE_USE_CASCADE=true
TRUNCATE_SKIP_IF_NOT_EXISTS=true

# =============================================================================
# CONFIGURACION DE LOGGING
# =============================================================================
# Niveles: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
